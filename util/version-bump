#!/usr/bin/env bash

set -euo pipefail

main() (
  root=$(cd $(dirname "${BASH_SOURCE[0]}")/.. && pwd -P)
  source "$root/.version.sh"

  (
    set -x
    cd rust || exit
    cargo update
  )
)

bump() (
  file=$1
#  perl -n0e "m/$pattern/ or exit 1" "$file" || return 0
  set -x
  perl -p0i -e "s/$pattern/\${1}$version\$2/" "$file"
)

die() {
  echo "$*" >&2
  exit 1
}

[[ $0 != "${BASH_SOURCE[0]}" ]] || main "$@"
